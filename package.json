{
  "name": "next-boilerplate",
  "version": "0.1.0",
  "private": true,
  "author": "Renan Pereira <renanmol87@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/r3nanp/next-boilerplate.git"
  },
  "keywords": [
    "react",
    "next",
    "boilerplate",
    "r3nanp-boilerplate"
  ],
  "bugs": {
    "url": "https://github.com/r3nanp/next-boilerplate/issues"
  },
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && eslint src --max-warnings=0",
    "postinstall": "husky install",
    "test": "jest --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "test:watch": "jest --watch --maxWorkers=15%"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "dependencies": {
    "next": "^11.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.8",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.25.0",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.8.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.4",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
